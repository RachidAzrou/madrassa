{
  "name": "mymadrassa-cross-platform",
  "version": "0.1.0",
  "private": true,
  "description": "MyMadrassa Cross-Platform Application",
  "main": "electron/main.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run start:web\" \"wait-on http://localhost:19006 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "build:electron": "electron-builder",
    "build:mobile": "expo build"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-web": "~0.19.6",
    "expo": "~49.0.0",
    "expo-status-bar": "~1.6.0",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.17",
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.14",
    "concurrently": "^8.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.1.3",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.mymadrassa.app",
    "productName": "MyMadrassa",
    "files": [
      "electron/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Education"
    }
  }
}